<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.gnome.shell.extensions.weather" path="/org/gnome/shell/extensions/weather/">
    <key type="i" name="position-in-panel">
      <default>2</default>
      <summary>Position in panel</summary>
      <description>Position in Panel ('left', 'center', 'right')</description>
    </key>
    <key type="i" name="update-time">
      <default>300</default>
      <summary>Seconds between updates</summary>
      <description>Delay between querying the Weather API</description>
    </key>
    <key type="s" name="api-key">
      <default>""</default>
      <summary>Weather API key</summary>
      <description>Key to use when querying the openweathermap.org API</description>
    </key>
  </schema>
</schemalist>